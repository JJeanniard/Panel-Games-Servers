<form method="post" action="{{ path('ip_delete', {'ip': ip.ip}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ip.ip) }}">
    <button class="btn">Delete</button>
</form>
