{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h5>{{ label|capitalize }}</h5>
            {{ message|raw }}
        </div>
    {% endfor %}
{% endfor %}